                @Html.DisplayFor(modelItem => item.Color)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Weight)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Size)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.RequiredRefrigeration)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DangerousMaterial)
            </td>
