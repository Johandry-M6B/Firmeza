                @Html.DisplayFor(modelItem => item.Supplier.Nit)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.BuyerPrice)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SalePrice)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.WholesalePrice)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CurrentStock)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MinimumStock)
            </td>
